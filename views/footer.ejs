<script>
  async function askDelete(tag) {
    const yesDelete = confirm("You will delete the post oh! Tap okay if you're sure you want to delete")
    if (yesDelete) {
      const theDiv = tag.closest(".post-plus-rule");
      const postId = tag.parentNode.querySelector("[name=hiddenPostId]").value;
      try {
        await fetch("/delete?postId=" + postId, {
          method: "DELETE"
        })
        console.log(postId);
        theDiv.parentNode.removeChild(theDiv)
      } catch (error) {
        alert("There was a problem deleting the post from the database")
      }
    }
  }




